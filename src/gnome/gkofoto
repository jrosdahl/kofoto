#!/usr/bin/env python
import pygtk
pygtk.require('2.0')
import gtk
import gtk.gdk
import gobject
import gtk.glade
from gnomekofoto.environment import env
from kofoto.imagecache import *
from gnomekofoto.mainwindow import *

class WidgetsWrapper:
    def __init__(self):
        self.widgets = gtk.glade.XML(env.gladeFile, "mainWindow")

    def __getitem__(self, key):
        return self.widgets.get_widget(key)

class Controller:
    def __init__(self):
        self.__clipboard = None

    def start(self):
        self.__mainWindow = MainWindow()
        env.widgets["mainWindow"].connect('destroy', self.quit, False)
        env.widgets["mainWindow"].show()
        currentObjects = None
        gtk.main()

    def quit(self, app, cancelButton=True):
        if env.shelf.isModified():
            widgets = gtk.glade.XML(env.gladeFile, "quitDialog")
            quitDialog = widgets.get_widget("quitDialog")
            if not cancelButton:
                widgets.get_widget("cancel").set_sensitive(False)
            result = quitDialog.run()
            if result == 0:
                print "commit"
                env.shelf.commit()
                gtk.main_quit()
            elif result == 1:
                print "rollback"
                env.shelf.rollback()
                gtk.main_quit()
            else:
                quitDialog.destroy()
                return
        else:
            print "rollback"
            env.shelf.rollback()
            gtk.main_quit()

    def save(self, app):
        env.shelf.commit()
        print "commit"
        env.shelf.begin()

    def revert(self, app):
        env.shelf.rollback()
        print "rollback"
        env.shelf.begin()
        self.__mainWindow.reload()

######################################################################
### Start

env.widgets = WidgetsWrapper()
env.controller = Controller()
env.controller.start()
